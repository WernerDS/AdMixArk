<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    @if (Context.Request.Path.ToString().Length <= 1)
    {
        <title>AdMix Stock</title>
    }
    else
    {
        <title>@ViewData["Title"] - AdMix Stock</title>
    }
	
	<!-- Vendor Styles -->
	<link rel="stylesheet" href="~/lib/animate.css/animate.min.css">
	<link rel="stylesheet" href="~/lib/rateYo/min/jquery.rateyo.min.css">
	
	<!-- Core Styles -->
	<link rel="stylesheet" href="~/css/admix.css">
    
    <!-- Font Awesome 5 -->
    <script>
		FontAwesomeConfig = { searchPseudoElements: true };
	</script>  
	<script defer src="~/js/fontawesome-all.js"></script>
        
</head>
<body class="pri-sec-gradient">

    @await Html.PartialAsync("Pageload")
	@await Html.PartialAsync("Navigation")
	
	@RenderBody()

	<!-- Core Scripts -->
    <script src="~/js/jquery-3.2.1.min.js"></script>
	<script src="~/js/popper.min.js"></script>
	<script src="~/js/bootstrap.min.js"></script>
	
	<!-- Vendor Scripts -->
	
	@RenderSection("Scripts", required: false)
	<script src="~/js/site.js" asp-append-version="true"></script>
    
</body>
</html>
